<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/green_overlay"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:gravity="center">

        <Button
            android:id="@+id/addMeals"
            android:background="@drawable/btn_bg_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="13dp"
            android:textStyle="bold"
            android:text="Add Meals To DB" />

        <Button
            android:id="@+id/searchIngredients"
            android:background="@drawable/btn_bg_green"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="13dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search By Ingredients" />

        <Button
            android:id="@+id/searchMeals"
            android:background="@drawable/btn_bg_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="13dp"
            android:textStyle="bold"
            android:text="Search For Meals" />

        <Button
            android:id="@+id/onlineSearch"
            android:background="@drawable/btn_bg_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="13dp"
            android:textStyle="bold"
            android:text="Online Search" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>